<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register!</title>
    <link rel="stylesheet" href="{{ asset('styles/register.css') }}">
</head>
<body>
    
    <div class="container">
    <div class="form-container">
        {{ form_errors(registrationForm) }}
        <h1>Register</h1>
        {{ form_start(registrationForm) }}
            <div class="form-group">
                <label for="email" class="form-label">Email:</label>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-input'}}) }}
            </div>
            <div class="form-group">
            <label for="password" class="form-label">Password:</label>
            <div class="password-container">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-input', 'id': 'password', 'autocomplete': 'new-password', 'required': 'required'}}) }}            </div>
            </div>


            <div class="form-group">
                <!-- Checkbox y su etiqueta al lado -->
                <div class="checkbox-container">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    <label for="agreeTerms" class="form-label checkbox-label">Agree to Terms</label>
                </div>
            </div>
            <input type="hidden" name="_target_path" value="{{ path('app_login') }}">
            <button type="submit" class="btn btn-primary">Register</button>
            <a href="{{ path('app_login') }}" class="link">Already have an account? Log in</a> 
            <a href="{{ path('app_default') }}" class="link">Go back to home</a>
        {{ form_end(registrationForm) }}
    </div>
    <div class="image-container">
        <div class="overlay"></div>
        <img src="{{ asset('img/imsa3.png') }}" alt="DescripciÃ³n de la imagen">
    </div>
</div>

</body>
</html>